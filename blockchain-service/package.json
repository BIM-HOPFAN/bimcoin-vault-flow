{
  "name": "ton-blockchain-service",
  "version": "1.0.0",
  "description": "Production-ready TON blockchain service with Jetton support",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "migrate": "node -r tsx/cjs src/database/migrate.ts",
    "worker": "tsx src/workers/blockchain-worker.ts",
    "lint": "eslint src --ext .ts",
    "docker:build": "docker build -t ton-blockchain-service .",
    "docker:up": "docker-compose up -d"
  },
  "dependencies": {
    "@ton/core": "^0.61.0",
    "@ton/crypto": "^3.3.0",
    "@ton/ton": "^15.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "bullmq": "^4.15.4",
    "axios": "^1.6.2",
    "winston": "^3.11.0",
    "crypto-js": "^4.2.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.9",
    "@types/pg": "^8.10.7",
    "@types/cors": "^2.8.15",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.7",
    "@types/crypto-js": "^4.2.1",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/jest": "^29.5.6",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}