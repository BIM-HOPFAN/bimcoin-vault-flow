# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database Configuration (Docker Compose setup)
DATABASE_URL=postgresql://postgres:password@localhost:5432/blockchain_service
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000

# Redis Configuration (Docker Compose setup)
REDIS_URL=redis://localhost:6379
REDIS_MAX_RETRIES=3

# TON Network Configuration
TON_NETWORK=testnet
TON_CENTER_API_KEY=your_toncenter_api_key_here
TON_API_KEY=your_tonapi_key_here

# Treasury Configuration (TESTNET ADDRESSES - REPLACE WITH REAL ONES)
TREASURY_TON_ADDRESS=EQC_treasury_ton_address_here
TREASURY_JETTON_MASTER=EQD_treasury_jetton_master_address_here

# CRITICAL SECURITY: NEVER store treasury mnemonics in .env files
# Treasury mnemonics MUST be stored in KMS/HSM only:
# - AWS KMS (recommended for production)
# - HashiCorp Vault
# - Hardware Security Module (HSM)
# - Azure Key Vault
# 
# For local development, use test wallets with minimal funds only.
# Any mnemonic added here will be visible in version control history.
# See KMS_PROVIDER configuration below for production secret management.

# Security Configuration
WEBHOOK_SECRET=dev_webhook_secret_change_in_production_256_bit
JWT_SECRET=dev_jwt_secret_change_in_production
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Business Logic Configuration
DAILY_TON_LIMIT=10.0
DAILY_JETTON_LIMIT=1000000.0
MIN_TON_WITHDRAWAL=0.1
MIN_JETTON_WITHDRAWAL=1.0
MAX_TRANSACTION_RETRIES=3

# Exchange Rates Configuration
BIM_TO_TON_RATE=0.005
BIM_TO_JETTON_RATE=1.0
TON_TO_BIM_RATE=200.0
JETTON_TO_BIM_RATE=1.0

# KMS/HSM Configuration (Production)
KMS_PROVIDER=none
AWS_REGION=us-west-2
AWS_KMS_KEY_ID=arn:aws:kms:us-west-2:123456789012:key/your-key-id
HSM_SLOT_ID=0
VAULT_URL=https://vault.example.com
VAULT_SECRET_PATH=secret/treasury

# Monitoring Configuration
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
ENABLE_HEALTH_CHECK=true
METRICS_PORT=9090

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-domain.com

# Webhook Configuration
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3